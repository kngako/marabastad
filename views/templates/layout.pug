        <script>window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'UA-81711306-5');
        </script>

    body
        header(role="banner")
            
            nav.green
                .container
                    .nav-wrapper
                        a.brand-logo(href="/") Marabastad

                        a.button-collapse(href="/account/menu")
                            i.material-icons menu
                        -
                            var menuItems = [
                                {
                                    name: "Sell Something",
                                    link: "/account",
                                    image: "store"
                                },
                                {
                                    name: "Buy Something",
                                    link: "/market",
                                    image: "shopping_cart"
                                }
                            ]
                        ul#nav-mobile.hide-on-med-and-down.right
                            each menuItem in menuItems
                                li
                                    a(href=menuItem.link)= menuItem.name
                                        i.material-icons.left= menuItem.image
                            if user
                                li
                                    a(href="/account/logout") Logout
                                //- <a href="/account"><i class="material-icons left">search</i>Open Your Jar</a>
                            //- li
                                <a href="/explore">Explore Jars</a>
        
        main(role="main")
            //- .container.center
            //-     p Under developement
            block content
                .container
                    p.flow-text Show love and support

            

