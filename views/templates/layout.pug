            footer.page-footer.green(role="footer")
                <div class="container">
                    <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">Marabastad</h5>
                        <p class="grey-text text-lighten-4">Place where digital content gets sold.</p>
                    </div>
                    <div class="col l4 offset-l2 s12">
                        <h5 class="white-text">Shameless Plug</h5>
                        <ul>
                            <li><a class="black-text text-lighten-3" href="https://github.com/kngako/marabastad.git">Github</a></li>
                            <li><a class="black-text text-lighten-3" href="https://twitter.com/kpangako">Twitter</a></li>
                            <li><a class="black-text text-lighten-3" href="https://facebook.com/lawreat">Facebook</a></li>
                        </ul>
                    </div>
                    </div>
                </div>
                <div class="footer-copyright">
                    <div class="container">&copy;  2017 <a href="https://kngako.com" target="_blank" class="black-text">Kgothatso Ngako</a><a class="black-text text-lighten-4 right" href="http://eregardless.com"  target="_blank">{e}regardless</a></div>
