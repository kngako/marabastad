        style
            include ../css/materialize.min.css

        style
            include ../css/site.css
        
        
        <link type="text/css" rel="stylesheet" href="/account/static/css/materialize.min.css"  media="screen,projection"/>
        //- <link type="text/css" rel="stylesheet" href="/admin/static/css/site.css"  media="screen,projection"/>
        
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

        block favicon
            <link rel="icon" type="image/png" href="/account/static/img/favicon.png"/>

        //- SEO stuff goes here...
        -
            //var pageTitle = pageTitle == null ? "Money Jar - Lead them to the right money jar" : pageTitle
        title= pageTitle
        block seo
            
            <meta name="description" content="The url shortener that allows you to aggregate platforms which you accept payments on">
        
        block facebookSEO
            //- URL should be explicit and resolved
            <meta property="og:url" content="http://marabastad.jar.money" />
            <meta property="og:type" content="website" />
            <meta property="og:title" content="Marabastad" />
            <meta property="og:description" content="Place where digital goods are sold"/>
            //- image url should alway be resolved and rendered
            <meta property="og:image" content="http://jar.money/account/static/img/share_image.jpg" />
            <meta property="fb:app_id" content="238540263188666" />

        block twitterSEO
            <meta name="twitter:card" content="summary" />
            <meta name="twitter:site" content="@kpangako" />
            <meta name="twitter:creator" content="@kpangako" />
        
        //- Google Analytics and the likes: Global site tag (gtag.js) - Google Analytics -->
