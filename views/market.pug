extend templates/layout.pug

block content
    .container
        .center
            h1 Marabastad Store
            
            //- TODO: Implement the search function...
            .row
                each stall in stalls
                    .col.s12.m4
                        .card
                            .card-image
                                img(src=stall.image.src, alt=stall.name)
                                //- span.card-title= stall.name
                                //- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                                a.btn-floating.btn-large.halfway-fab.waves-effect.waves-light.red(href="/market/" + stall.id)
                                    i.material-icons shopping_cart
                            .card-content
                                p.flow-text= stall.name